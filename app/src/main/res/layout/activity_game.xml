<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/gameLayout"
        android:layout_width="409dp"
        android:layout_height="340dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/layout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/score"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continue" />
    </LinearLayout>

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="388dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLayout"
        android:background="#a2a2d0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:backgroundTint="#f4f1de"
                android:text="@string/space" />

            <Button
                android:id="@+id/button2"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:backgroundTint="#f2cc8f"

                android:text="@string/space"
                app:toggleCheckedStateOnClick="false" />

            <Button
                android:id="@+id/button3"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"

                android:backgroundTint="#babf95"
                android:text="@string/space" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"

                android:backgroundTint="#eab69f"
                android:text="@string/space" />

            <Button
                android:id="@+id/button5"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:backgroundTint="#81b29a"
                android:text="@string/space" />

            <Button
                android:id="@+id/button6"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:backgroundTint="#5f797b"
                android:text="@string/space" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:backgroundTint="#e07a5f"
                android:text="@string/space" />

            <Button
                android:id="@+id/button8"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:backgroundTint="#8f5d5d"
                android:text="@string/space" />

            <Button
                android:id="@+id/button9"
                android:layout_width="123sp"
                android:layout_height="120sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"

                android:backgroundTint="#3d405b"
                android:text="@string/space" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>